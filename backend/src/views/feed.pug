extends layout

block content
  main
    h1 Your feed
    section(role='search')
      p Mmemo search:
      form(method='get', action='/mnemo/')
        input#searchInput.search(type='text', name='title', placeholder='Enter a mnemo title')
        button(type='submit') Search
    section
      ul
      each mnemo in mnemos
        li(style='list-style-type: none')
          h3
            a(href=`/mnemo/${mnemo.title}`) #{mnemo.title}
          p= mnemo.place
          p= mnemo.text
          p
            time(datetime=`${mnemo.date.year + "-" + mnemo.date.month + "-" + mnemo.date.day}`)= mnemo.date.day + "." + mnemo.date.month + "." + mnemo.date.year
          hr
